{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {},
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "requireConfigFile": false,
    "ecmaFeatures": {
      "jsx": true,
      "restParams": true,
      "spread": true
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "new-cap": 0,
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-undef": 1,
    "no-unused-vars": 0,
    "no-var": 1,
    "no-console": "off",
    "prettier/prettier": "error",
    "spaced-comment": 0
  }
}
